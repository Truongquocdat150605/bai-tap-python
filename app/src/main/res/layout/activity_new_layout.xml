<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECEFF1"
    android:padding="16dp"
    android:weightSum="1.0">

    <!-- TextView "Chào mừng!" với trọng số 0.18 -->
    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"
        android:gravity="center"
        android:text="Chào mừng!"
        android:textColor="#37474F"
        android:textStyle="bold"
        android:textSize="28sp"
        android:background="#CFD8DC"
        android:padding="12dp"
        android:elevation="4dp" />

    <!-- Hàng chứa EditText và Button với trọng số 0.10 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/editTextInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nhập tên hoặc email"
            android:background="@drawable/edittext_border_new"
            android:padding="12dp"
            android:textColor="#212121"
            android:textColorHint="#757575" />

        <Button
            android:id="@+id/buttonContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:background="@drawable/button_background_new"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="16dp" />
    </LinearLayout>

    <!-- Hàng 1: Google, Facebook, Zalo, Apple với trọng số 0.18 -->
    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Google"
            android:layout_marginEnd="8dp"
            style="@style/SocialButtonNew.Google" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Facebook"
            android:layout_marginEnd="8dp"
            style="@style/SocialButtonNew.Facebook" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Zalo"
            android:layout_marginEnd="8dp"
            style="@style/SocialButtonNew.Zalo" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Apple"
            style="@style/SocialButtonNew.Apple" />
    </LinearLayout>

    <!-- Hàng 2: Gmail, Số điện thoại, Khách, Khác với trọng số 0.18 -->
    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Gmail"
            android:layout_marginEnd="8dp"
            style="@style/SocialButtonNew.Gmail" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Số điện thoại"
            android:layout_marginEnd="8dp"
            style="@style/SocialButtonNew.Phone" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Khách"
            android:layout_marginEnd="8dp"
            style="@style/SocialButtonNew.Guest" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Khác"
            style="@style/SocialButtonNew.Other" />
    </LinearLayout>

    <!-- Hàng 3: Hỗ trợ, Cài đặt, Ngôn ngữ, Thông tin với trọng số 0.18 -->
    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Hỗ trợ"
            android:layout_marginEnd="8dp"
            style="@style/SocialButtonNew.Support" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cài đặt"
            android:layout_marginEnd="8dp"
            style="@style/SocialButtonNew.Settings" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ngôn ngữ"
            android:layout_marginEnd="8dp"
            style="@style/SocialButtonNew.Language" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Thông tin"
            style="@style/SocialButtonNew.Info" />
    </LinearLayout>

    <!-- Hàng 4: Điều khoản, Chính sách, Bảo mật, Liên hệ với trọng số 0.18 -->
    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Điều khoản"
            android:layout_marginEnd="8dp"
            style="@style/SocialButtonNew.Terms" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Chính sách"
            android:layout_marginEnd="8dp"
            style="@style/SocialButtonNew.Policy" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bảo mật"
            android:layout_marginEnd="8dp"
            style="@style/SocialButtonNew.Security" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Liên hệ"
            style="@style/SocialButtonNew.Contact" />
    </LinearLayout>

</LinearLayout>